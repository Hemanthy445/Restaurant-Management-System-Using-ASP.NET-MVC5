@model Restaurant.Models.menu

@{

    ViewBag.Title = "Edit Menu Item";
}

<h2>Add Menu Item</h2>

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MenuId)

    <div class="form-group">
        @Html.LabelFor(model => model.FoodName)
        @Html.EditorFor(model => model.FoodName)
        @Html.ValidationMessageFor(model => model.FoodName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FoodPrice)
        @Html.EditorFor(model => model.FoodPrice)
        @Html.ValidationMessageFor(model => model.FoodPrice)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Totalprice)
        @Html.EditorFor(model => model.Totalprice)
        @Html.ValidationMessageFor(model => model.Totalprice)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.quantity)
        @Html.EditorFor(model => model.quantity)
        @Html.ValidationMessageFor(model => model.quantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FoodDescription)
        @Html.TextAreaFor(model => model.FoodDescription, new { @class = "form-control", @rows = "5" })
        @Html.ValidationMessageFor(model => model.FoodDescription)
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
